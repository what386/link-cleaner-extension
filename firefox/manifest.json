{
  "manifest_version": 2,
  "name": "Link Cleaner",
  "version": "1.0",
  "description": "Clean tracking and junk from copied links.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": [
      "cleaner.js",
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "notifications"
  ]
}
