{
  "manifest_version": 2,
  "name": "Link Cleaner",
  "version": "1.2",
  "description": "Clean tracking and junk from copied links.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Clean current page URL"
  },
  "background": {
    "scripts": ["cleaner.js", "background.js"]
  },
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "notifications",
    "tabs",
    "activeTab"
  ]
}
